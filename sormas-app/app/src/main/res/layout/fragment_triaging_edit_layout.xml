<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="contentDescription"
    android:descendantFocusability="beforeDescendants"
    android:id="@+id/base_layout">


    <data>
        <import type="android.view.View" />
        <import type="de.symeda.sormas.api.ebs.SignalCategory"/>
        <import type="de.symeda.sormas.api.ebs.CategoryDetailsLevel"/>
        <import type="de.symeda.sormas.api.ebs.HumanCommunityCategoryDetails"/>
        <import type="de.symeda.sormas.api.ebs.HumanFaclityCategoryDetails"/>

        <import type="de.symeda.sormas.api.ebs.AnimalCommunityCategoryDetails"/>
        <import type="de.symeda.sormas.api.ebs.AnimalFacilityCategoryDetails"/>
        <import type="de.symeda.sormas.api.ebs.AnimalLaboratoryCategoryDetails"/>

        <import type="de.symeda.sormas.api.ebs.EnvironmentalCategoryDetails"/>
        <import type="de.symeda.sormas.api.ebs.POE"/>

        <import type="de.symeda.sormas.api.utils.YesNo"/>
        <import type="de.symeda.sormas.api.ebs.EbsTriagingDecision"/>

        <import type="de.symeda.sormas.api.ebs.OutComeSupervisor"/>


        <variable name="data" type="de.symeda.sormas.app.backend.ebs.triaging.Triaging"/>
        <variable name="triagingSignalCategoryClass" type="Class" />
        <variable name="triagingCategoryDetailsLevelClass" type="Class" />

        <variable name="triagingHumanCommunityCategoryDetailsClass" type="Class" />
        <variable name="triagingHumanFaclityCategoryDetailsClass" type="Class" />
        <variable name="triagingHumanLaboratoryCategoryDetailsClass" type="Class" />

        <variable name="triagingAnimalCommunityCategoryDetailsClass" type="Class" />
        <variable name="triagingAnimalFacilityCategoryDetailsClass" type="Class" />
        <variable name="triagingAnimalLaboratoryCategoryDetailsClass" type="Class" />

        <variable name="triagingEnvironmentalCategoryDetailsClass" type="Class" />
        <variable name="triagingPOEClass" type="Class" />

        <variable name="yesNoClass" type="Class" />
        <variable name="triagingDecisionClass" type="Class" />
        <variable name="triagingOutComeSupervisorClass" type="Class" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/main_content"
            style="@style/LayoutSingleContentSpaceBelowStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.symeda.sormas.app.component.controls.ControlTextReadField
                    android:id="@+id/event_uuid"
                    style="@style/ControlFirstOfTwoColumnsStyle"
                    app:shortUuidValue="@{data.uuid}" />

            </LinearLayout>

            <ImageView style="@style/FullHorizontalDividerStyle"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <de.symeda.sormas.app.component.controls.ControlSwitchField
                    android:id="@+id/triaging_specificSignal"
                    app:enumClass="@{yesNoClass}"
                    style="@style/ControlFirstOfTwoColumnsStyle"
                    app:value="@={data.specificSignal}"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <de.symeda.sormas.app.component.controls.ControlSwitchField
                    android:id="@+id/triaging_supervisorReview"
                    app:enumClass="@{yesNoClass}"
                    app:dependencyParentField="@{triagingSpecificSignal}"
                    app:dependencyParentValue="@{YesNo.NO}"
                    style="@style/ControlFirstOfTwoColumnsStyle"
                    app:value="@={data.supervisorReview}"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <de.symeda.sormas.app.component.controls.ControlSpinnerField
                    android:id="@+id/triaging_outcomeSupervisor"
                    app:dependencyParentField="@{triagingSupervisorReview}"
                    app:dependencyParentValue="@{YesNo.YES}"
                    style="@style/ControlFirstOfTwoColumnsStyle"
                    app:value="@={data.outcomeSupervisor}"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <de.symeda.sormas.app.component.controls.ControlSwitchField
                    android:id="@+id/triaging_healthConcern"
                    app:enumClass="@{yesNoClass}"
                    app:dependencyParentField="@{triagingOutcomeSupervisor}"
                    app:dependencyParentValue="@{OutComeSupervisor.ISNOTSIGNAL}"
                    style="@style/ControlFirstOfTwoColumnsStyle"
                    app:value="@={data.healthConcern}"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <de.symeda.sormas.app.component.controls.ControlSwitchField
                    android:id="@+id/triaging_referred"
                    app:enumClass="@{yesNoClass}"
                    app:dependencyParentField="@{triagingHealthConcern}"
                    app:dependencyParentValue="@{YesNo.YES}"
                    style="@style/ControlFirstOfTwoColumnsStyle"
                    app:value="@={data.referred}"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <de.symeda.sormas.app.component.controls.ControlTextEditField
                    android:id="@+id/triaging_referredTo"
                    app:dependencyParentField="@{triagingReferred}"
                    app:dependencyParentValue="@{YesNo.YES}"
                    style="@style/ControlFirstOfTwoColumnsStyle"
                    app:value="@={data.referredTo}"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <de.symeda.sormas.app.component.controls.ControlSwitchField
                    android:id="@+id/triaging_signalCategory"
                    style="@style/ControlFirstOfTwoColumnsStyle"
                    app:required="true"
                    app:dependencyParentField="@{triagingSpecificSignal}"
                    app:dependencyParentValue="@{YesNo.YES}"
                    app:enumClass="@{triagingSignalCategoryClass}"
                    app:value="@={data.signalCategory}"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <de.symeda.sormas.app.component.controls.ControlSwitchField
                    android:id="@+id/triaging_categoryDetailsLevel"
                    style="@style/ControlFirstOfTwoColumnsStyle"
                    app:required="true"
                    app:enumClass="@{triagingCategoryDetailsLevelClass}"
                    app:value="@={data.categoryDetailsLevel}"/>
            </LinearLayout>
                <de.symeda.sormas.app.component.controls.ControlRadioGroupField
                    android:id="@+id/triaging_humanCommunityCategoryDetails"
                    style="@style/ControlSingleColumnStyle"
                    app:dependencyParentField="@{triagingSignalCategory}"
                    app:dependencyParentValue="@{SignalCategory.HUMAN}"
                    app:enumClass="@{triagingHumanCommunityCategoryDetailsClass}"
                    app:value="@={data.humanCommunityCategoryDetails}"/>
            <de.symeda.sormas.app.component.controls.ControlRadioGroupField
                    android:id="@+id/triaging_humanFacilityCategoryDetails"
                    style="@style/ControlSingleColumnStyle"
                    app:dependencyParentField="@{triagingSignalCategory}"
                    app:dependencyParentValue="@{SignalCategory.HUMAN}"
                    app:enumClass="@{triagingHumanFaclityCategoryDetailsClass}"
                    app:value="@={data.humanFacilityCategoryDetails}"/>
            <de.symeda.sormas.app.component.controls.ControlRadioGroupField
                    android:id="@+id/triaging_humanLaboratoryCategoryDetails"
                    style="@style/ControlSingleColumnStyle"
                app:dependencyParentField="@{triagingSignalCategory}"
                app:dependencyParentValue="@{SignalCategory.HUMAN}"
                    app:enumClass="@{triagingHumanLaboratoryCategoryDetailsClass}"
                    app:value="@={data.humanLaboratoryCategoryDetails}"/>


            <de.symeda.sormas.app.component.controls.ControlRadioGroupField
                android:id="@+id/triaging_animalCommunityCategoryDetails"
                style="@style/ControlSingleColumnStyle"
                app:dependencyParentField="@{triagingSignalCategory}"
                app:dependencyParentValue="@{SignalCategory.ANIMAL}"
                app:enumClass="@{triagingAnimalCommunityCategoryDetailsClass}"
                app:value="@={data.animalCommunityCategoryDetails}"/>

            <de.symeda.sormas.app.component.controls.ControlRadioGroupField
                android:id="@+id/triaging_animalFacilityCategoryDetails"
                style="@style/ControlSingleColumnStyle"
                app:dependencyParentField="@{triagingSignalCategory}"
                app:dependencyParentValue="@{SignalCategory.ANIMAL}"
                app:enumClass="@{triagingAnimalFacilityCategoryDetailsClass}"
                app:value="@={data.animalFacilityCategoryDetails}"/>

            <de.symeda.sormas.app.component.controls.ControlRadioGroupField
                android:id="@+id/triaging_animalLaboratoryCategoryDetails"
                style="@style/ControlSingleColumnStyle"
                app:dependencyParentField="@{triagingSignalCategory}"
                app:dependencyParentValue="@{SignalCategory.ANIMAL}"
                app:enumClass="@{triagingAnimalLaboratoryCategoryDetailsClass}"
                android:maxLines="1"
                android:ellipsize="end"
                app:value="@={data.animalLaboratoryCategoryDetails}"/>

            <de.symeda.sormas.app.component.controls.ControlRadioGroupField
                android:id="@+id/triaging_environmentalCategoryDetails"
                style="@style/ControlSingleColumnStyle"
                app:dependencyParentField="@{triagingSignalCategory}"
                app:dependencyParentValue="@{SignalCategory.ENVIRONMENT}"
                app:enumClass="@{triagingEnvironmentalCategoryDetailsClass}"
                app:value="@={data.environmentalCategoryDetails}"/>

            <de.symeda.sormas.app.component.controls.ControlRadioGroupField
                android:id="@+id/triaging_poeCategoryDetails"
                style="@style/ControlSingleColumnStyle"
                app:dependencyParentField="@{triagingSignalCategory}"
                app:dependencyParentValue="@{SignalCategory.POE}"
                app:enumClass="@{triagingPOEClass}"
                app:value="@={data.poeCategoryDetails}"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <de.symeda.sormas.app.component.controls.ControlSwitchField
                    android:id="@+id/triaging_occurrencePreviously"
                    style="@style/ControlFirstOfTwoColumnsStyle"
                    app:dependencyParentField="@{triagingOutcomeSupervisor}"
                    app:dependencyParentValue="@{OutComeSupervisor.ISNOTSIGNAL}"
                    app:enumClass="@{yesNoClass}"
                    app:value="@={data.occurrencePreviously}"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <de.symeda.sormas.app.component.controls.ControlSwitchField
                    android:id="@+id/triaging_triagingDecision"
                    style="@style/ControlFirstOfTwoColumnsStyle"
                    app:required="true"
                    app:dependencyParentField="@{triagingSpecificSignal}"
                    app:dependencyParentValue="@{YesNo.YES}"
                    app:enumClass="@{triagingDecisionClass}"
                    app:value="@={data.triagingDecision}"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <de.symeda.sormas.app.component.controls.ControlDateField
                    android:id="@+id/triaging_decisionDate"
                    style="@style/ControlSingleColumnStyle"
                    app:dependencyParentField="@{triagingSpecificSignal}"
                    app:dependencyParentValue="@{YesNo.YES}"
                    app:required="true"
                    app:allowedDaysInFuture="0"
                    app:value="@={data.decisionDate}" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</layout>

